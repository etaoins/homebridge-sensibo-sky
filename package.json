{
  "name": "homebridge-sensibo-sky",
  "description": "HomeBridge plugin for Sensibo Sky",
  "version": "0.4.2",
  "repository": {
    "type": "git",
    "url": "git://github.com/wailuen/homebridge-sensibo-sky.git"
  },
  "license": "ISC",
  "preferGlobal": true,
  "keywords": [
    "homebridge-plugin",
    "sensibo-sky"
  ],
  "engines": {
    "node": ">=0.12.0",
    "homebridge": ">=0.3.0"
  },
  "scripts": {
    "format": "yarn format:eslint && yarn format:prettier",
    "format:prettier": "prettier --write index.js 'accessories/*.js' 'lib/*.js'",
    "format:eslint": "eslint --fix index.js 'accessories/*.js' 'lib/*.js'",
    "lint": "concurrently 'yarn lint:eslint' 'yarn lint:prettier'",
    "lint:prettier": "prettier --list-different index.js 'accessories/*.js' 'lib/*.js'",
    "lint:eslint": "eslint index.js 'accessories/*.js' 'lib/*.js'",
    "test": "jest --collectCoverage"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-seek": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.2.4",
    "prettier": "^2.0.2"
  }
}
